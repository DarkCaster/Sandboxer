#!/bin/bash

executor=""
executor_static=""
commander=""

for hint in "$@"
do
 #debug
 #echo "probing $hint"
 if [ -x "$hint/executor" ] && [ -x "$hint/executor.static" ] && [ -x "$hint/commander" ]; then
  executor="$hint/executor"
  executor_static="$hint/executor.static"
  commander="$hint/commander"
  break
 fi
done

if [ -z "$executor" ]; then
 echo "executor binaries not found!"
 exit 1
fi

executor=`realpath "$executor"`
executor_static=`realpath "$executor_static"`
commander=`realpath "$commander"`
